<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record model="ir.ui.view" id="view_tree_runtime_execution_content">
        <field name="name">runtime.execution.content Tree</field>
        <field name="model">runtime.execution.content</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
            </tree>
        </field>
    </record>

    <record model="ir.ui.view" id="view_form_runtime_execution_content">
        <field name="name">runtime.execution.content Form</field>
        <field name="model">runtime.execution.content</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <div name="button_box" class="oe_button_box">
                        <button type="object" class="btn btn-primary" icon="fa-rotate-left" string="重置原始文件" name="reset_file"/>
                    </div>
                    <group>
                        <group>
                            <field name="name" invisible="1"/>
                            <field name="file" filename="name"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Text">
                            <field name="text" force_save="1" nolabel="1"/>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread" options="{'post_refresh': 'recipients'}"/>
                </div>
            </form>
        </field>
    </record>

    <record model="ir.actions.act_window" id="act_window_runtime_execution_content">
        <field name="name">Execution Content</field>
        <field name="res_model">runtime.execution.content</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem id="menu_runtime_execution_content" name="Execution Content"
              parent="main_menu_runtime_actuator"
              action="act_window_runtime_execution_content"
    />
</odoo>