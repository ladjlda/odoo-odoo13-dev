<?xml version='1.0' encoding='UTF-8'?>
<odoo>
    <record id="view_form_acm_base_import_view_file" model="ir.ui.view">
        <field name="name">acm_base import view file form</field>
        <field name="model">acm_base.import_view_file</field>
        <field name="arch" type="xml">
            <form create='1' edit="1">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button string="import" type="object"
                                icon="fa-download"
                                name="import_file_action" class="oe_stat_button"/>
                        <button string="delete" type="object"
                                icon="fa-unlink"
                                name="delete_file_action" class="oe_stat_button"/>
                    </div>
                    <h1>Imported view file</h1>
                    <group>
                    <group>
                        <field name="view_type"/>
                    </group>
                    </group>
                    <notebook>
                        <page string="Imported view">
                            <field name="view_ids"
                                   widget="section_and_note_one2many"
                                   mode="tree" options="{'no_create_edit': True}">
                                <tree>
                                    <field name="name"/>
                                    <field name="type"/>
                                    <field name="key"/>
                                    <field name="create_uid"/>
                                    <field name="create_date"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <div class="oe_chatter">
                    <field name="message_follower_ids" widget="mail_followers"/>
                    <field name="activity_ids" widget="mail_activity"/>
                    <field name="message_ids" widget="mail_thread"/>
                </div>
            </form>
        </field>
    </record>
    <record id="view_tree_acm_base_import_view_file" model="ir.ui.view">
        <field name="name">acm_base import view file tree</field>
        <field name="model">acm_base.import_view_file</field>
        <field name="arch" type="xml">
            <tree create='1' edit="1">
                <field name="name"/>
                <field name="view_type"/>
            </tree>
        </field>
    </record>
    <record model="ir.actions.act_window" id="act_window_acm_base_import_view_file">
        <field name="name">Import view file</field>
        <field name="res_model">acm_base.import_view_file</field>
        <field name="view_mode">tree,form</field>
    </record>

    <menuitem
            id="acm_base_import_view_file_menu"
            name="Import view file"
            action="act_window_acm_base_import_view_file"
            parent="base.next_id_2"/>
</odoo>